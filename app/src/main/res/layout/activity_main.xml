<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gunjan.camperaapp.MainActivity">


   <Button
        android:id="@+id/button_image"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal|center|center_vertical"
        android:gravity="center_vertical|center|center_horizontal"
        android:text="Take a picture!"
        android:background="@drawable/round"
        />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="219dp"
        android:layout_height="154dp"
        android:layout_gravity="center_horizontal|center|center_vertical"
        android:gravity="center_vertical|center|center_horizontal"
         />



    <TextView
        android:id="@+id/box"
        android:layout_width="258dp"
        android:layout_height="wrap_content"

        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/caption"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:hint="Photo Caption"
            android:textColorHint="@android:color/darker_gray"/>

        <Button
            android:id="@+id/okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="OK"
            android:layout_marginLeft="140dp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/latitude"
        android:layout_width="137dp"
        android:layout_height="46dp"
        android:text="latitude"
        android:layout_gravity="center_horizontal|center|center_vertical"
        android:gravity="center_vertical|center|center_horizontal"
         />

    <TextView
        android:id="@+id/decrypted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center|center_vertical"
        android:gravity="center_vertical|center|center_horizontal"
        android:text="Decrypted" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="138dp"
        android:layout_height="50dp"
        android:text="longitude"
        android:layout_gravity="center_horizontal|center|center_vertical"
        android:gravity="center_vertical|center|center_horizontal"
        />

    <TextView
        android:id="@+id/city"
        android:layout_width="149dp"
        android:layout_height="34dp"
        android:text="city"
        android:layout_gravity="center_horizontal|center|center_vertical"
        android:gravity="center_vertical|center|center_horizontal"
         />

    <TextView
        android:id="@+id/hashid"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal|center|center_vertical"
        android:gravity="center_vertical|center|center_horizontal"
        android:text="Hashid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload"
        android:id="@+id/upload"
        android:background="@drawable/round"
        android:layout_marginLeft="150dp"/>

</LinearLayout>
